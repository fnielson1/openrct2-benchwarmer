{
  "name": "openrct2-benchwarmer",
  "version": "1.0.2",
  "description": "Add benches and trash cans to all of your paths with one click",
  "main": "dist/benchwarmer.js",
  "scripts": {
    "build": "tsup",
    "build:install": "cpy ./dist/benchwarmer.js \"${OPENRCT2_DIR}/plugin\"",
    "test": "jest",
    "lint": "eslint .",
    "fmt": "prettier --write .",
    "dev": "tsup --watch",
    "clean": "rm -rf build coverage tags",
    "start": "yarn build && yarn use && $OPENRCT2_BIN intro",
    "release": "semantic-release",
    "style": "prettier --check .",
    "types": "tsc --noEmit",
    "prepare": "husky install"
  },
  "tsup": {
    "entry": [
      "benchwarmer.ts"
    ],
    "splitting": false,
    "clean": true
  },
  "author": "Tom Scott <tubbo@psychedeli.ca>",
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "^1.3.25",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "cpy-cli": "^3.1.1",
    "depcheck": "^1.4.3",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.4.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6",
    "tsup": "^6.5.0",
    "typescript": "^4.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tubbo/openrct2-benchwarmer.git"
  },
  "packageManager": "yarn@3.3.1"
}
